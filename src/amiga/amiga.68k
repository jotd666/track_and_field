0:	
	.ifndef	RELEASE
	* compute ram start for dev mode
	* align so real addresses LSW match actual arcade addresses
	* and lower 16-bit match original RAM offsets
	* (since memory is shared, Z80 addresses match except for
	* ram after 0xA000 and M6809 addresses are slightly shifted)
	*
	* only the game logic & screen memory (0x8000-0x9FFF) is 
	* perfectly aligned but that's enough to debug the game logic
	* now that the 6809 code works
	*
	lea		dev_ram_buffer,a6
	move.l	a6,d0
	clr.w	d0
	move.l	d0,d1
	add.l	#0x18000,d1
	move.l	d1,z80_ram_start_8000		| Z80 memory (0x8000-0x9FFF)
	
	move.l	d0,d1
	add.l	#0x1A000,d1
	move.l	d1,m6809_ram_start_4000		| 6809 memory (0x4000-0x6800) 0x6000/0xA000 shared with Z80

	* relocate rom tables just after shared RAM
	* we changed the ROM offset from E000 to 6800 too
	* so memory is contiguous (only 1 segment of memory RAM+ROM)
	* and 6809 memory access is way faster (no bank switching)
	move.l	d0,d1
	add.l	#0x1C800,d1
	move.l	d1,m6809_rom_start_e000
	
	* copy the ROM data

	move.l 	d1,a1
	move.w	#0x1FF,d0
	lea		sub_rom_base,a0
0:
	move.l	(a0)+,(a1)+
	dbf		d0,0b
	.else
	* release mode

	lea		m6809_rom_buffer,a1
	move.w	#0x1FF,d0
	lea		sub_rom_base,a0
0:
	move.l	(a0)+,(a1)+
	dbf		d0,0b
	.endif
	
	GET_M6809_MEMORY_START_IN_A6
	jbsr		gyruss_sub_reset				| initialize the subcpu memory
